datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Patient {
  id            String              @id @default(uuid())
  name          String
  age           Int
  sexe          String?
  diagnosis     String
  poids         Float?
  taille        Float?
  traitement    String?
  numSecu       String?             @unique
  medecin       String?
  rendezvous    DateTime?
  createdAt     DateTime            @default(now())
  notes         String?
  groupeSanguin String?
  allergies     String?
  historique    HistoriqueMedical[] @relation("PatientHistory") // Relation nommée
}

model HistoriqueMedical {
  id               Int      @id @default(autoincrement())
  patientId        String
  patient          Patient  @relation("PatientHistory", fields: [patientId], references: [id]) // Même nom de relation
  dateConsultation DateTime @default(now())
  motif            String
  observations     String?
  prescription     String?
}
